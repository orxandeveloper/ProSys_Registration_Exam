@model List<StudentVM>

@{
    ViewData["Title"] = "Students List";
}

<h2>Şagirdlər</h2>
<a href="@Url.Action("Create" )" class="btn btn-primary float-end">Yeni Şagird</a>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            
            <th>Nömrəsi </th>
            <th>Adı</th>
            <th>Soyadı </th>
            <th>Sinifi</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
               @* <td>@student.Id</td>*@
                <td><a href="Students/Detail/@student.Id">@student.StudentNumber</a></td>
                <td><a href="Students/Detail/@student.Id">@student.FirstName</a></td>
                <td><a href="Students/Detail/@student.Id">@student.LastName</a></td>
                <td><a href="Students/Detail/@student.Id">@student.GradeLevel</a></td>
                
            </tr>
        }
    </tbody>
</table>

